# Seirin - Example environment variables

# Database
DB_TYPE=postgres
# For Docker: use service name 'postgres'; for local: 127.0.0.1
DB_HOST=postgres
DB_PORT=5432
DB_USER=seirin
DB_PASSWORD=seirin_password
DB_NAME=seirin_db

# Application
NODE_ENV=development
PORT=3000
# Run TypeORM migrations automatically on startup
RUN_MIGRATIONS=true

# Swagger
SWAGGER_ENABLED=true

# Logging
LOG_LEVEL=info

# Database logging (TypeORM query logs)
DB_LOGGING=false

BCRYPT_SALT_ROUNDS=10
JWT_SECRET=your_jwt_secret_key